<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sevenorcas.field.graph.GraphActivity">

    <!-- we add graph view to display -->
    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp" />

    <EditText
        android:id="@+id/maxYTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minYTxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Max Y" />

    <EditText
        android:id="@+id/minYTxtV"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="270dp"
        android:layout_toEndOf="@+id/minYTxt"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="min" />

    <EditText
        android:id="@+id/maxYTxtV"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minYTxtV"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/minYTxt"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="max" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maxYTxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="125dp"
        android:text="Save" />

    <EditText
        android:id="@+id/minYTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="270dp"
        android:editable="false"
        android:ems="10"
        android:enabled="true"
        android:inputType="text"
        android:text="Min Y"
        tools:editable="false" />


</RelativeLayout>